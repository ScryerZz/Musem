        <ui:Button x:Name="CreateExhibitinBtn" Content="Создать" HorizontalAlignment="Left" Margin="277,110,0,0" Grid.Row="4" VerticalAlignment="Top" Height="29" Width="110" FontSize="18" Grid.Column="2" Click="CreateExibitBtn_Click"/>
        <ui:Button x:Name="Back" Content="Отменить" HorizontalAlignment="Left" Margin="392,110,0,0" Grid.Row="4" VerticalAlignment="Top" Height="29" Width="110" FontSize="18" Grid.Column="2" Click="Back_Click"/>
    </Grid>
</Page>
